{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PropertyResponse",
  "type": "object",
  "required": [
    "property"
  ],
  "properties": {
    "property": {
      "$ref": "#/definitions/Property"
    }
  },
  "definitions": {
    "Property": {
      "type": "object",
      "required": [
        "construction",
        "floor",
        "propery_type",
        "region",
        "squaring"
      ],
      "properties": {
        "construction": {
          "type": "string"
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "floor": {
          "type": "string"
        },
        "propery_type": {
          "$ref": "#/definitions/PropertyType"
        },
        "region": {
          "$ref": "#/definitions/PropertyRegion"
        },
        "squaring": {
          "type": "string"
        }
      }
    },
    "PropertyRegion": {
      "type": "string",
      "enum": [
        "Varna",
        "Byala",
        "Sofia",
        "Razgrad",
        "Obzor",
        "Burgas",
        "Plovdiv"
      ]
    },
    "PropertyType": {
      "anyOf": [
        {
          "type": "object",
          "required": [
            "OneRoom"
          ],
          "properties": {
            "OneRoom": {
              "type": "object"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "TwoRoom"
          ],
          "properties": {
            "TwoRoom": {
              "type": "object"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "ThreeRoom"
          ],
          "properties": {
            "ThreeRoom": {
              "type": "object"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "FourRoom"
          ],
          "properties": {
            "FourRoom": {
              "type": "object"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "MultiRoom"
          ],
          "properties": {
            "MultiRoom": {
              "type": "object"
            }
          },
          "additionalProperties": false
        }
      ]
    }
  }
}
